generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  avatars   Avatar[]  @relation("UserAvatars")
}

model Avatar {
  id           String    @id @default(uuid())
  userId       String
  name         String
  style        String    
  seed         String    
  options      Json      
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation("UserAvatars", fields: [userId], references: [id], onDelete: Cascade)
}

